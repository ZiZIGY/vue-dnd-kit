{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Paths */
    "baseUrl": ".",
    "paths": {
      "@vue-dnd-kit/core": ["../packages/core/src"],
      "@vue-dnd-kit/core/*": ["../packages/core/src/*"],
      "@vue-dnd-kit/components": ["../packages/components/src"],
      "@vue-dnd-kit/components/*": ["../packages/components/src/*"],
      "@vue-dnd-kit/devtools": ["../packages/devtools/src"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "shims.d.ts",
    "../packages/components/src/templates/Dashboard/Dashboard.vue",
    "../packages/components/src/templates/Dashboard/Example/ChartCard.vue",
    "../packages/components/src/templates/Dashboard/Example/NotificationCard.vue",
    "../packages/components/src/templates/Dashboard/Example/StatCard.vue",
    "../packages/components/src/templates/Dashboard/Example/TaskList.vue"
  ]
}
